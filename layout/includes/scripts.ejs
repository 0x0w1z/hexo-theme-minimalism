<% if (theme.use_bootcdn) { %>
    <script src="https://cdn.bootcdn.net/ajax/libs/jquery/1.8.0/jquery.min.js"></script>
<% } else { %>
    <script src="<%= url_for('/js/jquery.min.js') %>"></script>
<% } %>

<script>
$(".menu-switch").click(function () {
    if ($(this).hasClass('icon-menu-outline')) {
        $(this).removeClass(' icon-menu-outline ').addClass('icon-close-outline');
        $('.menu-container').css('opacity', '1').css('height', 'auto');
    } else {
        $(this).addClass(' icon-menu-outline ').removeClass('icon-close-outline');
        $('.menu-container').css('opacity', '0');

        var that = $(this);
        setTimeout(function () {that.hasClass('icon-menu-outline') && $('.menu-container').css('height', '0')}, 600)
    }
});

</script>


<% if (theme.gitalk.enable && is_post()) { %>

<% if (theme.use_bootcdn) { %>
    <script src="https://cdn.bootcdn.net/ajax/libs/gitalk/1.7.2/gitalk.min.js"></script>
<% } else { %>
    <script src="<%= url_for('/js/gitalk.min.js') %>"></script>
<% } %>

<script>

  var gitalk = new Gitalk({
    clientID: '<%= theme.gitalk.clientId %>',
    clientSecret: '<%= theme.gitalk.clientSecret %>',
    repo: '<%= theme.gitalk.repository %>',
    owner: '<%= theme.gitalk.owner %>',
    admin: ['<%= theme.gitalk.owner %>'],
    id: location.pathname.slice(1, location.pathname.lastIndexOf('/')).substring(0, 49),       // Ensure uniqueness and length less than 50
    distractionFreeMode: false,  // Facebook-like distraction free mode
    createIssueManually: <%= theme.gitalk.createIssueManually %>,
  })

  gitalk.render('gitalk-container')

</script>
<% } %>


