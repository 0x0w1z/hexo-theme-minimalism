<div class="site-footer">
  <div class="slogan"><%- config.description %></div>
  <div class="social-container">
    <% ['github', 'twitter', 'weibo', 'zhihu', 'facebook'].forEach((item) => { %>
      <% if (theme.contact[item]) { %>
        <a href="<%= theme.contact[item] %>" target="_blank">
          <i class="fab fa-<%= item %>"></i>
        </a>
      <% } %>
    <% }) %>
  </div>
  Powered by <a href="https://hexo.io/" target="_blank">Hexo</a>
  <% if (theme.icp.enable) { %>
      <div id="icp">
          <img src="<%- config.url %>/images/icp.png" style="vertical-align: text-bottom;"/>
          <a href="<%- url_for(theme.icp.url) %>" target="_blank"><%= theme.icp.text %></a>
      </div>
  <% } %>
</div>
