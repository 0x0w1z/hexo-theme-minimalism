/*! 夜间主题 */

html.dark {
    background-color: #121212;
    color: #fff;
    .post-title {
        color: #e3e3e3;
    }
    .post-item .content {
        .post-title {
            color: #e3e3e3;
        }
        .post-abstract {
            color: #afafaf;
        }
    }
    .post-detail .post-title {
        color: #d3d3d3;
    }
    .post-content {
        p {
            color: #c0c0c0;
        }
        code {
            color: #e3e3e3;
            background-color: rgba(110,118,129,0.4);
            border: none;
            border-radius: 6px;

         }
        h1, h2, h3, h4, h5, h6 {
            color: #ddd;
        }
        img {
            box-shadow: none;
        }
        table {
            color: #c0c0c0;
            tr:hover {
                background-color: #2e2e2e;
            }
        }
        ul, ol {
            color: #c0c0c0;
        }
    }


    .highlight {
        background-color: black;
        .copy-code {
            color: #7e7e7e;
        }
        table tr:hover {
            background-color: black;
        }
    }

    .keyword, .selector-tag, .subst {
        color: #e3e3e3;
    }

    .site-header-container {
        background-color: #121212;
    }
    .site-header {
        box-shadow: none;
        .site-title {
            color: #c0c0c0;
        }
    }

    .top-box li {
        a {
            color: #e3e3e3;
        }
        a:hover, a.current {
            color: #006cff !important;
            background: #ddd;
        }
    }

    .next-post {
        .post-title {
            color: #e3e3e3;
        }
        .purple-link {
            background: linear-gradient(180deg, transparent 70%, rgb(101,125,225) 0);
        }
    }

    .pagination-container, .site-footer {
         a {
            color: #c0c0c0;
        }
    }
    .menu-container {
        background-color: #121212;
        .menu-list {
            a {
                color: #c0c0c0;
            }
        }
    }

    // Gitalk
    .gt-container .gt-comment-body {
        color: #dfdfdf !important;
    }
    .markdown-body blockquote {
        border-left: 0.25em solid #959595;
    }
    .gt-container {
        .gt-comment-content:hover {
            box-shadow: none;
        }
        .gt-header-textarea {
            background-color: #424a54 !important;
            color: #dfdfdf;
        }
        .gt-header-textarea:hover {
            background-color: #424a54;
        }
        .gt-comment-content {
            background-color: black;
        }
        .gt-svg svg {
            fill: #6190e8;
        }
    }

    // 代码块
    .tag, .name, .attribute {
        color: #2d22dd;
    }

}
